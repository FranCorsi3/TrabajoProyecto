{
  "ConnectionStrings": {
    // Cadena de conexión para SQL Server LocalDB
    // Server: Instancia local de SQL Server (LocalDB)
    // Database: Nombre de la base de datos que se utilizará
    // Trusted_Connection: Usa la autenticación de Windows
    // MultipleActiveResultSets: Permite múltiples consultas simultáneas
    // TrustServerCertificate: Confía en el certificado del servidor (para desarrollo)
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=ClubesDB;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true;"
  },
  "Jwt": {
    // Clave secreta para firmar los tokens JWT (EN PRODUCCIÓN debe ser más segura y estar en variables de entorno)
    "Key": "SuperSecretKeyForDevelopmentOnly123!",

    // Emisor del token - identifica quién creó el token
    "Issuer": "TrabajoProyectoAPI",

    // Destinatario del token - identifica para quién es válido el token
    "Audience": "TrabajoProyectoClients"
  },
  "Logging": {
    "LogLevel": {
      // Nivel de log por defecto: Information (registra información general)
      "Default": "Information",

      // Nivel de log para Microsoft.AspNetCore: Warning (solo registra advertencias y errores)
      // Esto reduce el ruido de los logs del framework
      "Microsoft.AspNetCore": "Warning"
    }
  },
  // Especifica qué hosts pueden acceder a la API
  // "*" permite cualquier host (solo para desarrollo)
  // En producción se deben especificar los dominios permitidos
  "AllowedHosts": "*"
}